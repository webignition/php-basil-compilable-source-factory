{
    "name": "webignition/php-basil-compilable-source-factory",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/php-basil-compilable-source-factory",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilCompilableSourceFactory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilCompilableSourceFactory\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR12",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "webignition/basil-compilable-source": ">=0.33,<1",
        "webignition/basil-dom-identifier-factory": ">=0.12,<1",
        "webignition/basil-identifier-analyser": ">=0.6,<1",
        "webignition/basil-models": ">=0.50,<1",
        "webignition/php-dom-element-identifier": ">=0.13,<1",
        "webignition/quoted-string-value-extractor": ">=0.2,<1"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-mockery": "^0.12",
        "phpunit/phpunit": "~9.0",
        "squizlabs/php_codesniffer": "3.*",
        "webignition/base-basil-test-case": ">=0.23,<1",
        "webignition/basil-parser": ">=0.23,<1",
        "webignition/symfony-panther-webserver-runner": ">=0.3,<1"
    },
    "config": {
        "sort-packages": true
    }
}
