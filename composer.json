{
    "name": "webignition/php-basil-compilable-source-factory",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/php-basil-compilable-source-factory",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilCompilableSourceFactory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilCompilableSourceFactory\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR2",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "webignition/php-basil-compilation-source": ">=0.10,<1",
        "webignition/php-basil-models": ">=0.88,<1"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^0.11.5",
        "symfony/panther": "^0.5.1",
        "webignition/php-basil-model-factory": ">=0.33,<1"
    }
}
