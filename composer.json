{
    "name": "webignition/php-basil-compilable-source-factory",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/php-basil-compilable-source-factory",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilCompilableSourceFactory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilCompilableSourceFactory\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@patch-panther-compatible-with-browserkit"
        ],
        "post-update-cmd": [
            "@patch-panther-compatible-with-browserkit"
        ],
        "patch-panther-compatible-with-browserkit": [
            "echo 'Patching vendor/symfony/panther/src/Client.php'",
            "sed -i 's/protected function doRequest($request): object/protected function doRequest($request)/g' vendor/symfony/panther/src/Client.php",
            "sed -i 's/protected function doRequest($request)/protected function doRequest($request): object/g' vendor/symfony/panther/src/Client.php",
            "echo 'Patching vendor/symfony/panther/src/DomCrawler/Crawler.php'",
            "sed -i 's/public function closest(string $selector): ?static/public function closest(string $selector): ?self/g' vendor/symfony/panther/src/DomCrawler/Crawler.php",
            "sed -i 's/public function closest(string $selector): ?self/public function closest(string $selector): ?static/g' vendor/symfony/panther/src/DomCrawler/Crawler.php"
        ],
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer check --allow-risky=yes --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test-unit": "./vendor/bin/phpunit --colors=always tests/Unit",
        "test-functional": "./vendor/bin/phpunit --colors=always tests/Functional",
        "test": [
            "@test-unit",
            "@test-functional"
        ],
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "webignition/base-basil-test-case": "^6.0",
        "webignition/basil-dom-identifier-factory": "^1.1",
        "webignition/basil-identifier-analyser": "^2.0",
        "webignition/basil-models": "^9.0",
        "webignition/basil-value-type-identifier": ">=0.3,<1",
        "webignition/php-dom-element-identifier": ">=0.16,<1",
        "webignition/quoted-string-value-extractor": ">=0.4,<1",
        "webignition/stubble": "^1.0",
        "webignition/symfony-panther-dom-crawler-navigator": ">=0.23,<1"
    },
    "require-dev": {
        "dbrekelmans/bdi": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.91",
        "mockery/mockery": "^1.4",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-mockery": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^4.0",
        "webignition/object-reflector": ">=0.2,<1",
        "webignition/symfony-panther-webserver-runner": ">=0.6,<1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
